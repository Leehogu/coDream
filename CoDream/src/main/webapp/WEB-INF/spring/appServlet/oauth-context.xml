<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<!-- oauth2 login -->
	
	<bean id="kakaoClientId" class="java.lang.String">
		<constructor-arg value="1f212b78287a8e560acf42ec064fe081"/>
	</bean>
	<bean id="kakaoClientSecret" class="java.lang.String">
		<constructor-arg value="XoZrwCCoEOtVFFC7KESIKu6FSb3BSQob"/>
	</bean>
	<bean id="kakaoRedirectUrl" class="java.lang.String">
		<constructor-arg value="http://localhost:8099/Security_Test/login/oauth2/kakao"/>
	</bean>
	
	<bean id="kakaoSns" class="com.code.dream.auth.SnsValue">
		<constructor-arg value="kakao"/>
		<constructor-arg ref="kakaoClientId"/>
		<constructor-arg ref="kakaoClientSecret"/>
		<constructor-arg ref="kakaoRedirectUrl"/>
	</bean>
	
	<bean id="naverClientId" class="java.lang.String">
		<constructor-arg value="oahMb4TFvprZjvOLKuI6"/>
	</bean>
	<bean id="naverClientSecret" class="java.lang.String">
		<constructor-arg value="BFSIr92a1N"/>
	</bean>
	<bean id="naverRedirectUrl" class="java.lang.String">
		<constructor-arg value="http://localhost:8099/Security_Test/login/oauth2/naver"/>
	</bean>
	
	<bean id="naverSns" class="com.code.dream.auth.SnsValue">
		<constructor-arg value="naver"/>
		<constructor-arg ref="naverClientId"/>
		<constructor-arg ref="naverClientSecret"/>
		<constructor-arg ref="naverRedirectUrl"/>
	</bean>
	
	<bean id="facebookClientId" class="java.lang.String">
		<constructor-arg value="960415908071996"/>
	</bean>
	<bean id="facebookClientSecret" class="java.lang.String">
		<constructor-arg value="44fd621fa377403c9b77078621ac2630"/>
	</bean>
	<bean id="facebookRedirectUrl" class="java.lang.String">
		<constructor-arg value="http://localhost:8099/Security_Test/login/oauth2/facebook"/>
	</bean>
	
	<bean id="facebookSns" class="com.code.dream.auth.SnsValue">
		<constructor-arg value="facebook"/>
		<constructor-arg ref="facebookClientId"/>
		<constructor-arg ref="facebookClientSecret"/>
		<constructor-arg ref="facebookRedirectUrl"/>
	</bean>
	
	<bean id="googleClientId" class="java.lang.String">
		<constructor-arg value="466425250261-l0pg8hrk011ob4q5dvn41mq3i7aaontc.apps.googleusercontent.com"/>
	</bean>
	<bean id="googleClientSecret" class="java.lang.String">
		<constructor-arg value="biselgNq4HgXf1vAGsy5eFQB"/>
	</bean>
	<bean id="googleRedirectUrl" class="java.lang.String">
		<constructor-arg value="http://localhost:8099/Security_Test/login/oauth2/google"/>
	</bean>
	
	<bean id="googleSns" class="com.code.dream.auth.SnsValue">
		<constructor-arg value="google"/>
		<constructor-arg ref="googleClientId"/>
		<constructor-arg ref="googleClientSecret"/>
		<constructor-arg ref="googleRedirectUrl"/>
	</bean>
	
	<bean id="googleConnectionFactory" class="org.springframework.social.google.connect.GoogleConnectionFactory">
		<constructor-arg ref="googleClientId"/>
		<constructor-arg ref="googleClientSecret"/>
	</bean>
	
	<bean id="googleOAuth2Parameters" class="org.springframework.social.oauth2.OAuth2Parameters">
		<property name="scope">
			<value>https://www.googleapis.com/auth/userinfo.email</value>
		</property>
		<property name="redirectUri" ref="googleRedirectUrl"/>
	</bean>

</beans>